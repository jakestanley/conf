# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	colors {
		background #ea4812
		statusline #EEEEEE
		separator  #FFFFFF

		# TYPE 		   border  bg	   text

		focused_workspace  #FFFFFF #ea9f12 #ffffff
        	active_workspace   #CCCCCC #ea7712 #EEEEEE
        	inactive_workspace #AAAAAA #ea3d12 #CECECE
        	urgent_workspace   #aa0000 #990000 #ffffff
	}

	# position
	position top

	# launch i3status
        status_command i3status -c ~/.i3/.i3status.conf
}
