volume master {
	format = "%volume"
	device = "alsa"
	mixer = "Master"
	mixer_idx = 0
}

wireless wlan0 {
        format_up = "WLAN: (%quality at %essid) %ip"
        format_down = ""
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "LAN: %ip"
	format_down = ""
}

battery 0 {
	integer_battery_capacity = true
        format = "%status %percentage"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "root: %avail"
}

disk "/home" {
	format = "home: %avail"
}

disk "/var" {
	format = "var: %avail"
}
